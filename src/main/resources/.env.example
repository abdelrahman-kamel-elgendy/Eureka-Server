# =====================================
# EUREKA SERVER - ENVIRONMENT VARIABLES
# =====================================

# Application Settings
APP_NAME=eureka-server
SERVER_PORT=8761

# Eureka Server Configuration
EUREKA_INSTANCE_HOSTNAME=localhost
EUREKA_CLIENT_REGISTER_WITH_EUREKA=false
EUREKA_CLIENT_FETCH_REGISTRY=false
EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE=localhost:8761

# Eureka Server Settings
EUREKA_SERVER_ENABLE_SELF_PRESERVATION=true
EUREKA_SERVER_EVICTION_INTERVAL_TIMER_MS=10000
EUREKA_SERVER_RENEWAL_PERCENT_THRESHOLD=0.85

# Security Configuration (CHANGE THESE IN PRODUCTION!)
EUREKA_USERNAME=eureka-admin
EUREKA_PASSWORD=admin123
SPRING_SECURITY_USER_NAME=eureka-client
SPRING_SECURITY_USER_PASSWORD=client123

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Logging Configuration
LOGGING_LEVEL_COM_NETFLIX_EUREKA=INFO
LOGGING_LEVEL_COM_NETFLIX_DISCOVERY=INFO

# Additional Settings
SPRING_CLOUD_COMPATIBILITY_VERIFIER_ENABLED=false
